@{
    Layout = "_Layout";
}

@using Capstone.Models

<h1></h1>

@if (Model.Count == 0)
{
    <p>nothing to do today!</p>
}
else
{
    @foreach (Entry entry in Model)
    {
        <div class="container p-2 bg-primary">
            <li>@Html.ActionLink(@entry.Title, "Details", "Entries", new { id = @entry.EntryId }) @entry.Reward 
                    @using (Html.BeginForm())
                        {
                            @Html.CheckBoxFor(Entry => entry.IsComplete)
                            <input type="submit" value="Save" />
                        }
            </li>
        </div><br>
    }
        
}
<hr/>

