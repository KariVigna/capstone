@{
    Layout = "_Layout";
}

@using Capstone.Models

<h1></h1>

<div class="container p-2 bg-primary">
@if (Model.Count == 0)
{
    <p>nothing to do today!</p>
}
else
{
    @foreach (Entry entry in Model)
    {
        
        @if (!entry.IsComplete)
        {
            <li>
            @entry.Kid.Name<br>
            @Html.ActionLink(@entry.Title, "Details", "Entries", new { id = @entry.EntryId }) @entry.Reward<img src="~/css/images/gold-star.png" width="30" height="30" alt=""> 
                    @using (Html.BeginForm("TaskCompleted", "Entries", new { entryId = @entry.EntryId }))
                        {
                            <input type="submit" value="Collect Stars" />
                        }
            <br>
            </li>
        }
    }
}
</div>
<hr/>

@Html.ActionLink("Add New Task", "Create", "Entries")<br>
@Html.ActionLink("See Completed Tasks", "Completed", "Entries")


