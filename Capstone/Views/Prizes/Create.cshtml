@{
    Layout = "_Layout";
}

@model Capstone.Models.Prize
@using System;

<center>
    <h1 class="purples">New Prize</h1>
</center>

<div class="container p-2 bg-primary">

    @using (Html.BeginForm())
    {

        <br>
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)

        <br>
        @Html.LabelFor(model => model.Cost)
        @Html.TextBoxFor(model => model.Cost, new { @type = "num" })

        <br>

        <input type="submit" id="lightblue" value="Add new reward" class="btn btn-default" />
    }
</div>

<span class="parentnav">
    @Html.ActionLink("Back to Parent Page", "ParentPage", "Home")
</span>