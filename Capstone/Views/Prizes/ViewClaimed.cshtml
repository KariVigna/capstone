@{
    Layout = "_Layout";
}

@model List<Capstone.Models.KidPrize>
@using Capstone.Models
@using System

<h1 class="purples">Claimed Prizes</h1>

<div class="container p-2 bg-primary">
    <table class="prize-table">
        <tr>
            <th>Name</th>
            <th>Prize</th>
        </tr>
        @foreach(KidPrize kidPrize in Model)
            {
                <tr>
                <td>@kidPrize.Kid.Name</td>
                <td>@kidPrize.Prize.Name</td>
                <td>
                    <a href='@Url.Action("DeleteJoin", "Prizes", new { id = kidPrize.KidPrizeId })'>
                        <img src='@Url.Content("~/css/images/x.gif")' width="20" height="20" />
                    </a>
                </td>
                </tr>
            }
    </table>
</div>

<span class="parentnav">
    @Html.ActionLink("Back to Parent Page", "ParentPage", "Home")
</span>