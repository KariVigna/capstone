@{
    Layout = "_Layout";
}

@using Capstone.Models

<h1 class="purples">PRIZE TIME!</h1>

<center>
<img src="~/./css/images/axolotl-prize.gif" width="200" height="200">
</center>

@if (Model.Count ==0) {
    <div class="container p-2 bg-primary">
        @Html.ActionLink("Add Some Prizes!", "Create", "Prizes")
    </div>
}
@foreach (Prize prize in Model)
{
    <div class="container p-2 bg-primary">
        <table>
            <td>
                @prize.Name
            </td>
            <td>
                @prize.Cost
                <a href='@Url.Action("AddKid", "Prizes", new { id = @prize.PrizeId })'>
                    <img src='@Url.Content("~/css/images/gold-star.png")' width="30" height="30" />
                </a>
            </td> 
            @* @using (Html.BeginForm("AddKid", "Prizes"))
                {
                    <input type="submit" id="lightblue" value="Claim Reward!" />
                } *@
        </table>
    </div><br>
}


<div id="footer">

@Html.ActionLink("Add New Prize", "Create", "Prizes") | 
@Html.ActionLink("Completed Tasks", "ViewCompleted", "Entries") | 
@Html.ActionLink("Claimed Prizes", "ViewClaimed", "Prizes")
</div>