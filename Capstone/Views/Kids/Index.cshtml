@{
    Layout = "_Layout";
}

@using Capstone.Models

<h1 class="purples">All Kids</h1>

@if (Model.Count == 0)
{
    <p>you have no children</p>
}
else
{
    @foreach (Kid kid in Model)
    {
        <div class="container p-2 bg-primary">
            <table>
                <tr>
                    <td>
                        @Html.ActionLink(@kid.Name, "Details", "Kids", new { id = @kid.KidId })
                        <a href='@Url.Action("Delete", "Kids", new { id = @kid.KidId })'>
                            <img src='@Url.Content("~/css/images/x.gif")' width="20" height="20" />
                        </a>
                    </td>
                </tr>
            </table>
        </div><br>
    }
}


