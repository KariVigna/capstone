@{
    Layout = "_Layout";
}

@using Capstone.Models

<h1 class="purples">All Kids</h1>

@if (Model.Count == 0)
{
    <p>you have no children</p>
}
else
{
    @foreach (Kid kid in Model)
    {
        <div class="container p-2 bg-primary">
        @kid.Name<br>
        @Html.ActionLink("Tasks", "Details", "Kids", new { id = @kid.KidId }) | 
        @Html.ActionLink("Delete?", "Delete", "Kids", new { id = @kid.KidId })
        </div><br>
    }
}


